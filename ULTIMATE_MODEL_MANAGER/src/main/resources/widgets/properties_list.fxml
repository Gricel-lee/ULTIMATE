<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="gui.controllers.PropertiesController" VBox.vgrow="ALWAYS" spacing="10.0">
	
	<HBox alignment="CENTER" spacing="10.0" >
		<Label text="Properties of Selected Model" />
		<Button onAction="#handleAddProperty" mnemonicParsing="false" text="+" />
		<Button onAction="#handleUp" mnemonicParsing="false" text="↑" />
		<Button onAction="#handleDown" mnemonicParsing="false" text="↓" />
	</HBox>
	
	<VBox fx:id="propertyVBox" VBox.vgrow="ALWAYS" spacing="10.0">
		<ListView fx:id="propertyListView" VBox.vgrow="ALWAYS" />
	</VBox>

</VBox>